#!/bin/bash

curl -vsSL https://get.rvm.io > ~/.dotfiles/bootstrap/bootstrap-rvm
curl -vsSf https://sh.rustup.rs > ~/.dotfiles/bootstrap/bootstrap-rust-up
curl -vsSL https://nixos.org/nix/install > ~/.dotfiles/bootstrap/bootstrap-nix
curl -vsSL https://git.io/fundle-install > _bootstrap-fish-fundle.fish
curl -vsSL https://get.haskellstack.org/ > ~/.dotfiles/bootstrap/bootstrap-haskell-stack

chmod 755 ~/.dotfiles/bootstrap/bootstrap*
chmod 755 ~/.dotfiles/bootstrap/_bootstrap*.sh
