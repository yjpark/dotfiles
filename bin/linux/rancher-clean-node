#!/usr/bin/env bash

docker ps | grep rancher- | cut -b 1-12 | xargs docker rm -f
docker ps | grep rancher1 | cut -b 1-12 | xargs docker rm -f
docker ps | grep rancher\/rke | cut -b 1-12 | xargs docker rm -f

# docker volume rm -f $(docker volume ls)
sudo rm -vrf /run/secrets/kubernetes.io
sudo rm -vrf /var/lib/etcd
sudo rm -vrf /var/lib/kubelet
sudo rm -vrf /var/lib/rancher
sudo rm -vrf /etc/kubernetes
sudo rm -vrf /opt/rke
sudo rm -vrf /etc/kubernetes
# docker volume rm -f $(docker volume ls)
# sudo reboot -h now
