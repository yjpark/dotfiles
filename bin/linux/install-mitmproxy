#!/usr/bin/env bash

# https://github.com/moncho/dry

cd ~/temp
rm mitmproxy*.gz
axel https://snapshots.mitmproxy.org/4.0.4/mitmproxy-4.0.4-linux.tar.gz
tar xf mitmproxy-4.0.4-linux.tar.gz
mv mitmproxy ~/bin
mv mitmweb ~/bin
mv mitmdump ~/bin

mitmproxy

cd ~/.mitmproxy
openssl x509 -in mitmproxy-ca-cert.pem -inform PEM -out mitmproxy-ca-cert.crt
openssl x509 -in mitmproxy-ca.pem -inform PEM -out mitmproxy-ca.crt
sudo mkdir -p /usr/share/ca-certificates/extra/
sudo cp *.crt /usr/share/ca-certificates/extra/
sudo dpkg-reconfigure ca-certificates
