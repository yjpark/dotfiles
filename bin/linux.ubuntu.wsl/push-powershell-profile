#!/usr/bin/env bash

# Older version built-in
# cp -vr ~/.dotfiles/windows/PowerShell/* ~/win/Documents/WindowsPowerShell/
# cp -vr ~/.dotfiles/private/windows/PowerShell/* ~/win/Documents/WindowsPowerShell/


# Newer version (cross platform)
mkdir -p ~/win/Documents/PowerShell/

cp -vr ~/.dotfiles/windows/PowerShell/* ~/win/Documents/PowerShell/
cp -vr ~/.dotfiles/private/windows/PowerShell/* ~/win/Documents/PowerShell/

if test -d ~/win/OneDrive/Documents/PowerShell/ ; then
    cp -vr ~/.dotfiles/windows/PowerShell/* ~/win/OneDrive/Documents/PowerShell/
    cp -vr ~/.dotfiles/private/windows/PowerShell/* ~/win/OneDrive/Documents/PowerShell/
fi
