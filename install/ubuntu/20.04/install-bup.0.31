#!/usr/bin/env bash

if [ -z $1 ] ; then
    FOLDER=~/projects/tools
fi
    FOLDER=$1
cd

mkdir -p $FOLDER

if [ -d ${FOLDER}/bup ] ; then
    cd ${FOLDER}/bup
    git pull
else
    cd $FOLDER
    git clone https://github.com/bup/bup.git
    cd bup
fi

sudo apt install build-essential python-is-python3 libpython3-dev

git checkout 0.31

echo ""
echo "Running configure"
./configure

echo ""
echo "Running make"
make

echo ""
echo "Installing to /usr/local"
sudo make install

